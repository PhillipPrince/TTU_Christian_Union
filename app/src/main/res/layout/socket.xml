<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADB3CF"
    tools:context=".Ministries">


    <ScrollView
        android:id="@+id/update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:text="Event"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/newEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#010323"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#AAB5EC"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="STARTS ON"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/startsOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#010323"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#AAB5EC"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="AT"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#010323"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#AAB5EC"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="ENDS ON"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/endsOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#010323"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#AAB5EC"></TextView>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="EVENT DETAILS"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="30dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/eventDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#010323"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#AAB5EC"></TextView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/updateType"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#34264C"
            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <ListView
            android:id="@+id/eventsList"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginBottom="0dp"></ListView>
    </LinearLayout>


    <ScrollView
        android:id="@+id/schedule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#34264C"
                android:textSize="40dp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/daysAndschedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#00030B"
                android:textStyle="bold"></TextView>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>